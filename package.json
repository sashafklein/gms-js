{
  "name": "gimme-sats",
  "version": "1.0.0",
  "description": "A vanilla JS library for easy Lightning payments",
  "main": "build/index.js",
  "scripts": {
    "css:build": "node ./scripts/build-css.js",
    "css:watch": "node ./scripts/watch-css.js",
    "js:build": "rollup index.js --file build/index.js --format iife --name 'GMS'",
    "js:watch": "rollup index.js -w --file build/index.js --format iife --name 'GMS'",
    "watch": "node ./scripts/watch.js",
    "start": "http-server --port 3000"
  },
  "author": "Sasha Klein",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "eslint": "^8.5.0",
    "http-server": "^14.0.0",
    "rollup": "^2.61.1",
    "sass": "^1.45.1"
  },
  "dependencies": {}
}
